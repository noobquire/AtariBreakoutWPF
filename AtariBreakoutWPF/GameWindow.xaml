<Window x:Class="AtariBreakoutWPF.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtariBreakoutWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="950">
    <Canvas Name="MainCanvas">
        <Canvas Background="AliceBlue" Name="GameCanvas" Height="450" Width="800" Top="50" Left="75" />
        <Button Name="TestButton" Height="20" Width="50" Canvas.Top="10" Canvas.Left="10" Content="pause" />
        <TextBlock Name="Score" Canvas.Top="10" Canvas.Right="10" Text="Score: 0" FontWeight="Bold" FontSize="25" />
        <Ellipse Name="BallCountEllipse" Canvas.Top="10" Canvas.Left="70" Width="20" Height="20" Fill="DarkRed"
                 Stroke="Aquamarine" />
        <TextBlock Name="BallCount" Text="x5" Canvas.Top="12" Canvas.Left="95" FontWeight="Bold" />
    </Canvas>


</Window>