<Window x:Class="AtariBreakoutWPF.PauseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtariBreakoutWPF"
        mc:Ignorable="d"
        Title="Game is paused" Height="230" Width="200" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="ContinueButton" Click="ContinueButton_OnClick" Grid.Row="0" Content="Continue" Height="30" Width="180"/>
        <Button Name="RestartButton" Click="RestartButton_OnClick" Grid.Row="1" Content="Restart game" Height="30" Width="180"/>
        <Button Name="AboutButton" Click="AboutButton_OnClick" Grid.Row="2" Content="About game" Height="30" Width="180"/>
        <Button Name="ExitButton" Click="ExitButton_OnClick" Grid.Row="3" Content="Exit" Height="30" Width="180"/>
    </Grid>
</Window>
